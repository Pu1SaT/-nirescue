        function highlightPillar(index) {
            const detailBox = document.getElementById('pillar-detail');
            const data = pillarDetails[index];
            
            // Visual feedback
            detailBox.style.opacity = '0.5';
            setTimeout(() => {
                detailBox.innerHTML = `
                    <h3 class="text-xl font-bold mb-2 text-orange-400 flex items-center gap-2">
                        ${data.title}
                    </h3>
                    <p class="text-slate-100 leading-relaxed">
                        ${data.content}
                    </p>
                `;
                detailBox.style.opacity = '1';
                detailBox.classList.remove('bg-slate-800');
                detailBox.classList.add('bg-slate-900'); // Slight pulse effect
            }, 200);
        }

