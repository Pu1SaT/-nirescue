    <script>
        // State Management
        let currentView = 'dashboard';
        
        // Navigation Logic
        function navigate(viewId) {
            // Update UI
            document.querySelectorAll('.view-section').forEach(el => el.classList.add('hidden-section'));
            document.getElementById(viewId).classList.remove('hidden-section');
            
            // Update Buttons
            document.querySelectorAll('.nav-link').forEach(el => el.classList.remove('active', 'bg-gray-100', 'font-bold'));
            // Find the button calling this (simple heuristic or passed 'this')
            // For simplicity in this vanilla implementation, we re-render styles based on ID match roughly
            // but relying on the click handler is easier.
            
            window.scrollTo(0, 0);
        }

        // Mobile Menu Toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        // Data & Charts Initialization
        document.addEventListener('DOMContentLoaded', () => {
            initRiskChart();
            initGoldenHourChart();
            initComparisonChart();
            populateProblemList();
        });

        // --- Chart 1: Risk Radar Chart ---
        function initRiskChart() {
            const ctx = document.getElementById('riskRadarChart').getContext('2d');
            new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Sismik Risk', 'NÃ¼fus YoÄŸunluÄŸu', 'YapÄ± StoÄŸu Riski', 'Afet GeÃ§miÅŸi', 'HazÄ±rlÄ±k Seviyesi'],
                    datasets: [{
                        label: 'TÃ¼rkiye',
                        data: [95, 85, 90, 95, 60],
                        fill: true,
                        backgroundColor: 'rgba(234, 88, 12, 0.2)', // Orange
                        borderColor: 'rgb(234, 88, 12)',
                        pointBackgroundColor: 'rgb(234, 88, 12)',
                    }, {
                        label: 'Yunanistan',
                        data: [80, 60, 70, 75, 75],
                        fill: true,
                        backgroundColor: 'rgba(59, 130, 246, 0.2)', // Blue
                        borderColor: 'rgb(59, 130, 246)',
                        pointBackgroundColor: 'rgb(59, 130, 246)',
                    },
                    {
                        label: 'Romanya',
                        data: [75, 65, 80, 60, 50], // Vrancea zone risk
                        fill: false,
                        borderColor: 'rgba(100, 116, 139, 0.5)',
                        borderDash: [5, 5]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#e2e8f0' },
                            grid: { color: '#e2e8f0' },
                            pointLabels: { font: { size: 12 } },
                            suggestedMin: 0,
                            suggestedMax: 100
                        }
                    },
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        // --- Chart 2: Golden Hour Line Chart ---
        function initGoldenHourChart() {
            const ctx = document.getElementById('goldenHourChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['0 Saat', '12 Saat', '24 Saat', '48 Saat', '72 Saat'],
                    datasets: [
                        {
                            label: 'Hayatta Kalma Ä°htimali (%)',
                            data: [95, 80, 40, 15, 5],
                            borderColor: 'rgb(220, 38, 38)', // Red
                            backgroundColor: 'rgba(220, 38, 38, 0.1)',
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Profesyonel Ekip UlaÅŸÄ±mÄ± (%)',
                            data: [5, 20, 60, 85, 95], // Takes time to arrive
                            borderColor: 'rgb(71, 85, 105)', // Slate
                            borderDash: [5, 5],
                            tension: 0.2
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Oran (%)' }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                footer: (tooltipItems) => {
                                    if(tooltipItems[0].parsed.x < 2) {
                                        return "Yerel ekipler bu aralÄ±kta kritiktir.";
                                    }
                                }
                            }
                        }
                    }
                }
            });
        }

        // --- Chart 3: Comparison Bar Chart ---
        function initComparisonChart() {
            const ctx = document.getElementById('comparisonChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
